<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/review_card_view"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    card_view:cardCornerRadius="5dp"
    android:backgroundTint="@color/grey_700" android:layoutMode="opticalBounds">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/videos_label_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:textAppearance="?android:textAppearanceLarge"
            android:text="@string/title_trailers" />

        <ListView
            android:id="@+id/list_videos"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/grey_700"
            android:dividerHeight="2dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:nestedScrollingEnabled="true">
        </ListView>

        <TextView
            android:id="@+id/empty_videos_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="@string/empty_trailers_list"
            android:visibility="gone" />
    </LinearLayout>
</android.support.v7.widget.CardView>
