<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    tools:context="com.nanodegree.joel.popularmovies.MovieDetailsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:isScrollContainer="true">
        <TextView
            style="@style/MovieTitleStyle"
            android:id="@+id/movie_title"
            android:layout_width="match_parent"
            android:minHeight="@dimen/movie_title_min_height"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#ff009688"/>
        <TableLayout android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow android:layout_height="match_parent" android:layout_width="match_parent" >
                <ImageView android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:id="@+id/movie_poster"
                    android:padding="@dimen/movie_poster_padding"/>
                <TableLayout android:layout_weight="8"
                    android:padding="@dimen/movie_details_padding">
                    <TableRow>
                        <TextView android:id="@+id/movie_release_Date"
                            android:padding="@dimen/movie_details_padding"
                            android:layout_width="wrap_content" />
                    </TableRow>
                    <TableRow>
                        <TextView android:id="@+id/movie_vote_average"
                            android:padding="@dimen/movie_details_padding"
                            android:layout_width="wrap_content" />
                    </TableRow>
                </TableLayout>
            </TableRow>
        </TableLayout>
        <TextView android:id="@+id/movie_plot_synopsis"
            android:padding="@dimen/movie_details_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
